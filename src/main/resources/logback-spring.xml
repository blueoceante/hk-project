<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- 定义日志文件的存储路径 -->
    <property name="LOG_DIR" value="logs"/>

    <!-- 定义日志文件的最大历史记录为 500MB -->
    <property name="MAX_HISTORY" value="500"/>

    <appender name="ROLLING-FILE-APPENDER" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- 指定日志文件的存储位置和文件名 -->
        <file>${LOG_DIR}/current.log</file>

        <!-- 日志文件滚动策略 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- 滚动策略的文件名模式 -->
            <fileNamePattern>${LOG_DIR}/%d{yyyy-MM-dd}-%i.log</fileNamePattern>
            <!-- 每个日志文件最大的大小 -->
            <maxFileSize>10MB</maxFileSize>
            <!-- 总日志文件大小的最大值 -->
            <totalSizeCap>${MAX_HISTORY}MB</totalSizeCap>
            <!-- 保留日志文件的最大历史记录 -->
            <maxHistory>30</maxHistory>
        </rollingPolicy>

        <!-- 日志文件的格式 -->
        <encoder>
            <pattern>%d{"yyyy-MM-dd HH:mm:ss.SSS"} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- 日志的输出格式 -->
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 日志记录级别 -->
    <!-- 控制台输出所有级别的日志 -->
    <root level="DEBUG">
        <appender-ref ref="STDOUT"/>
    </root>

    <!-- 文件仅记录INFO级别以上的日志 -->
    <logger name="ROOT" level="INFO">
        <appender-ref ref="ROLLING-FILE-APPENDER"/>
    </logger>

</configuration>
